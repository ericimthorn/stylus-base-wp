establish-baseline()

html {
  font-family: $font_one
  background: $color_one
  color: $color_two
}

body {
  background: transparent
}

h1, h2, h3, h4, h5, h6 {
  font-family: $font_two
  margin-bottom: 0
  {alllink} {
    //
  }
}

h1 {
  adjust-font-size-to(35px)
  color: $color_three
  margin-top: 0
}

h2 {
  color: $color_three
}

&.page-header {
  margin: 0;
  border-bottom: none
}

p {
  img {
    height: auto
    max-width: 100%
  }
}

{$alllink} {
  .read-more {
    white-space: nowrap
  }
}

a {
  text-decoration: underline
  &:visited {
    color: $color_three_alt
  }
  &:hover {
    color: $color_two
  } 
  &:active {
    color: $color_four
  }
}

label {
  min-width: 135px
  font-weight: normal
}

table {
  @extend .table
  @extend .table-striped
  @extend .table-hover
}

