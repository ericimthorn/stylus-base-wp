stickyfooter($footer-height, ".root", ".rootfooter", ".footer.content-info")

.container {
  center($break_max.w, $break_max.p)
}

//// HEADER
header.banner {
  .logo {
    +above($break_one) {
      col(1/6)
      column('1/6')
    }
  }
  .navigation-container {
    +above($break_one) {
      col(5/6)
      column('5/6')
    }
  }
}

//// CONTENT
.wrap.container {
  main.main {
    col(3/3)
    column('3/3')
    .sidebar-primary & {  // if has sidebar
      +above($break_one) {
        col(2/3)
        column('2/3')
       // move('1/3') // switch main and sidebar
      }
    }
  }
  //// SIDEBAR
  aside.sidebar {
    col(3/3)
    column('3/3')
    +above($break_one) {
      col(1/3)
      column('1/3')
      // move('-2/3') // switch main and sidebar
    }
  }
}

//// FOOTER
footer.content-info {
  box-sizing: border-box
  height: $footer-height
}